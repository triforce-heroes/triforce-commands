{
  "name": "@triforce-heroes/triforce-commands",
  "description": "Parse commands from game sources.",
  "version": "1.0.0",
  "license": "Apache License 2.0",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf ./dist && tsc -p ./tsconfig.build.json && swc ./dist -d .",
    "commander": "node ./dist/command.js",
    "commander:watch": "tsx watch ./src/command.ts",
    "prettier": "prettier --check ./src ./tests",
    "prettier:fix": "prettier --write ./src ./tests",
    "eslint": "eslint ./src ./tests",
    "eslint:fix": "eslint --fix ./src ./tests",
    "test": "vitest",
    "test:coverage": "vitest --coverage"
  },
  "dependencies": {
    "@triforce-heroes/triforce-core": "github:triforce-heroes/triforce-core"
  },
  "devDependencies": {
    "@rheactor/eslint-config-rheactor": "github:rheactor/eslint-config-rheactor",
    "@swc/cli": "^0.3.9",
    "@swc/core": "^1.4.2",
    "@types/node": "^20.11.19",
    "@vitest/coverage-v8": "^1.3.0",
    "commander": "^12.0.0",
    "rimraf": "^5.0.5",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "vitest": "^1.3.0"
  },
  "peerDependencies": {
    "glob": "^10.3.10"
  }
}
